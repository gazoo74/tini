set -e

# Must be called with two arguments!
# The script to source and the action.
if [ $# -lt 2 ] || ! [ -e "$1" ]
then
	cat <<EOF
Usage: $0 SCRIPT start|stop [ARGS...]
EOF
	exit 1
fi >&2

__script="$1"
shift
__action="$1"
shift

PIDFILE="/run/tini/pid/${__script##*/}"

start() {
	mkdir -p "${PIDFILE%/*}"
	/sbin/respawn "$@" >"$PIDFILE"
}

stop() {
	if ! [ -e "$PIDFILE" ]
	then
		echo -n "$PIDFILE: No such pidfile! "
		return 1
	fi

	/sbin/assassinate "$@" <"$PIDFILE"
	rm -f "$PIDFILE"
}

. "$__script"

# If EXEC is unset, guess the executable from script name.
if [ -z "$EXEC" ]
then
	EXEC="$(command -v "${__script##*/}")"
fi

# If ARGS is set, replace all arguments.
if [ -n "$ARGS" ]
then
	set -f
	set -- $ARGS
	set +f
fi

# If DESCRIPTION is unset, use script name.
if [ -z "$DESCRIPTION" ]
then
	DESCRIPTION="${__script##*/}"
fi

case "$__action" in
start)
	echo -n "starting $DESCRIPTION: " >&2
	if start "$EXEC" "$@"
	then
		echo "done" >&2
	else
		echo "failed (with rc $?)" >&2
	fi
	;;
stop)
	echo -n "stopping $DESCRIPTION: " >&2
	if stop
	then
		echo "done" >&2
	else
		echo "failed (with rc $?)" >&2
	fi
	;;
*)
	echo "Usage: ${__script##*/} start|stop [ARGS...]" >&2
	exit 1
	;;
esac
