PIDFILE="/var/run/syslogd.pid"

run_syslogd() {
	mkdir -p /var/log/
	"$@" -O /var/log/message
}

run_start() {
	run_syslogd "$@"
}

run_stop() {
	local pid
	pid="$(cat "$PIDFILE" 2>/dev/null || true)"
	if [ -z "$pid" ] || \
	   [ "$(readlink "/proc/$pid/exe")" != "$EXEC" ] && \
	   [ "$(cat "/proc/$pid/comm" 2>/dev/null)" != "${EXEC##*/}" ]
	then
		return 1
	fi

	kill -9 "$pid"
	rm -f "$PIDFILE"
}

run_foreground() {
	run_syslogd "$@" -n
}

run_status() {
	local exec
	local pid
	exec="$1"
	shift
	pid="$(cat "$PIDFILE" 2>/dev/null || true)"
	if [ -z "$pid" ] || \
	   [ "$(readlink "/proc/$pid/exe")" != "$exec" ] && \
	   [ "$(cat "/proc/$pid/comm" 2>/dev/null)" != "${exec##*/}" ]
	then
		return 1
	fi

	echo "$pid"
}
